<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCECE"
    tools:context=".BookFragment"
    android:id="@+id/bookFragment_mainlayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange">


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#052D91"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bookfragment_kyButton"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="6sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/bookfragment_searchoption_btn_company"
                        android:maxLines="1"
                        android:text="금영"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bookfragment_tjButton"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="6sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/bookfragment_searchoption_btn_company"
                        android:maxLines="1"
                        android:text="TJ"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <EditText
                android:id="@+id/bookfragment_findBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/search_strong_icon"
                android:drawableTint="@color/white"
                android:ems="15"
                android:hint="곡명을 입력해주세요."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookfragment_findTitle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/bookfragment_searchoption_btn"
                android:maxLines="1"
                android:text="#제목검색"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookfragment_findBtn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookfragment_findSinger"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bookfragment_searchoption_btn"
                android:text="#가수검색"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/bookfragment_findTitle"
                app:layout_constraintTop_toTopOf="@+id/bookfragment_findTitle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookfragment_sortkorean"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bookfragment_searchoption_btn"
                android:text="#노래가나다순"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/bookfragment_findTitle"
                app:layout_constraintTop_toBottomOf="@+id/bookfragment_findTitle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookfragment_sortsinger"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bookfragment_searchoption_btn"
                android:text="#가수이름순"
                android:maxLines="1"
                android:autoSizeMaxTextSize="17sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/bookfragment_sortkorean"
                app:layout_constraintTop_toTopOf="@+id/bookfragment_sortkorean" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bookfragment_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:visibility="gone"
                android:text="검색 결과가 없습니다..\n옵션을 확인 후 재검색 해주세요!"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bookfragment_songlist" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookfragment_songlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>